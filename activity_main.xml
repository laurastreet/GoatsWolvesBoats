<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/goat"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="goat"
        android:layout_gravity="left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/goat"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@+id/goat"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/wolf"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="wolf"
        android:layout_gravity="left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goat"
        app:srcCompat="@drawable/wolf" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@+id/wolf"
        app:layout_constraintTop_toBottomOf="@+id/text1" />

    <Button
        android:id="@+id/go"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GO"
        android:onClick="go"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wolf" />

    <TextView
        android:id="@+id/goatboats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goat Boats: "
        android:textSize="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/go" />

    <TextView
        android:id="@+id/num_goatboats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        app:layout_constraintLeft_toRightOf="@+id/goatboats"
        app:layout_constraintTop_toBottomOf="@+id/go" />

    <TextView
        android:id="@+id/wolfboats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wolf Boats: "
        android:textSize="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goatboats" />

    <TextView
        android:id="@+id/num_wolfboats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        app:layout_constraintLeft_toRightOf="@+id/wolfboats"
        app:layout_constraintTop_toBottomOf="@+id/num_goatboats" />

    <TextView
        android:id="@+id/mixedboats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mixed Boats: "
        android:textSize="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wolfboats" />

    <TextView
        android:id="@+id/num_mixedboats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        app:layout_constraintLeft_toRightOf="@+id/mixedboats"
        app:layout_constraintTop_toBottomOf="@+id/num_wolfboats" />


</androidx.constraintlayout.widget.ConstraintLayout>